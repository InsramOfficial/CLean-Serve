                                                <a href="#" class="btn btn-primary rounded-1 p-2 fs-7 btn-cart">
                                                    <svg width="18"
                                                         height="18">
                                                        <use xlink:href="#cart"></use>
                                                    </svg> Add to Cart
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>


                        }

                    </div>
                </div>
                <!-- / products-carousel -->

            </div>
        </div>
    </div>
</section>


